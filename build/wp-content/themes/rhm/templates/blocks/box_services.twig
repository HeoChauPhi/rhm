<div class="box-service">
   <div class="container-wide">
     <h2 class="box-title">{{service_box_title}}</h2>

     <div class="box-service__list">
      {% for item in services_list %}
       <div class="box-service__item">
         <div class="box-service__group">
           <div class="box-service__icon">
            {% if item.service_link %}
              <a href="{{item.service_link}}"><img src=" {{ item.service_image.url }} " alt="item.service_image.alt"></a>
            {% else %}
              <img src=" {{ item.service_image.url }} " alt="item.service_image.alt">
            {% endif %}
          </div>
           <h5 class="box-service__title">
            {% if item.service_link %}
              <a href="{{item.service_link}}">{{item.service_title}} </a>
            {% else %}
              {{item.service_title}}
            {% endif %}
          </h5>
         </div>
       </div>
     {% endfor %}
      </div>
   </div>
 </div>
