<div class="{{ component_class }} box-ctgr">
  <div class="container-wide">
    <h2 class="box-title">{{ activities_box_title }}</h2>

    {% if activities_images %}
    <div class="category-banner__list">
      {% for item in activities_images %}
        <div class="category-banner__item">
          <div class="category-banner__group">
            <div class="category-banner__icon">
              {% if item.activities_link_to_content %}
              <a href="{{item.activities_link_to_content}}"><img src="{{item.activities_image.url}}"></a>
              {% else %}
                <img src="{{item.activities_image.url}}">
              {% endif %}
            </div>
            <h5 class="category-banner__title">
              {% if item.activities_link_to_content %}
                <a href="{{item.activities_link_to_content}}">{{ item.activities_title }}</a>
              {% else %}
                {{ item.activities_title }}
              {% endif %}
            </h5>
          </div>
        </div>
      {% endfor %}
    </div>
    {% endif %}

    {% if activities_list %}
    <div class="box-ctgr__list">
    {% for item in activities_list %}
      <div class="box-ctgr__item">
        <h3 class="box-ctgr__title"><a href="{{get_term_name(item.slug, item.taxonomy).0.link}}">{{ item.name }}</a></h3>
        <div class="box-ctgr_description">{{ item.description }}</div>
      </div>
    {% endfor %}
    </div>
    {% endif %}
  </div>
</div>
