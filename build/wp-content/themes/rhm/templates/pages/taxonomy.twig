{% set sidebar_left = "none" %}

{% extends 'layout.twig' %}

{% block feature %}
  {% if term.feature_banner_fields %}
    <div class="feature">
      {{ flexible_content('feature_banner_fields') }}
    </div>
  {% endif %}
{% endblock %}

{% block content %}
  <h1 id="page-title">{{term.name}}</h1>

  {% if term.categories_fields %}
    <div class="box-category-image">
      {{ flexible_content('categories_fields') }}
    </div>
  {% endif %}

  {% include ["taxonomy-"~term.id~".twig", "taxonomy-"~term.taxonomy~".twig", 'taxonomy-tease.twig'] %}
{% endblock %}
