{% block content %}
  <h2 class="post-detail-title">{{ post.title }}</h2>
  {% if post.thumbnail.src %}
  <div class="post-picture">
    <img src="{{post.thumbnail.src}}" class="feature" />
  </div>
  {% endif %}
  <div class="post-content">
    {{ post.content|shortcodes }}
    {{ flexible_content('group_component') }}
    {{ flexible_content('view_component') }}
  </div>

  {% if post.terms('tags') %}
  <div class="tags">
    <label>Tags:</label>
    <ul class="tag-list">
    {% for term in post.terms('tags') %}
      <li><a href="{{term.link}}">{{term.name}}</a></li>
    {% endfor %}
    </ul>
  </div>
  {% endif %}

  <p class="blog-author">
    <span class="post-date">đăng ngày: {{ post.post_date|date('y/m/d')}}</span> | Người  Đăng: <a class="post-author" href="{{post.author.path}}"> {{ post.author.name }} </a>
  </p>
  {% if related('category') %}
    <h3 class="related-title block-title">Bài Viết Liên Quan</h3>
    <div class="post-related">
      {% for post in related('category') %}
        <div class="post-related__item">
          <div class="post-related__images" style="background-image: url('{{post.thumbnail.src}}')"><a href="{{post.link}}"><img src="{{post.thumbnail.src}}" class="feature" /></a></div>
          <h3 class="post-related__title"><a href="{{post.link}}">{{post.title}}</a></h3>
        </div>
      {% endfor %}
    </ul>
  {% endif %}
{% endblock %}
