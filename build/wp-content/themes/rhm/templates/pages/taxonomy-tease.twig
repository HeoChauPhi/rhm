{% block content %}
  {% for post in term.get_posts({'posts_per_page': count, 'paged': paged}) %}
    <div class="teaser__item">
      {% if post.thumbnail.src %}
        <div class="teaser__item__images">
         <img src="{{post.thumbnail.src}}" class="feature" />
        </div>
      {% endif %}
      <div class="teaser__item__group">
        <h3 class="teaser__title"><a href="{{post.link}}">{{ post.title }}</a></h3>
        <div class="teaser__content">{{ post.content|excerpt(30) }}</div>
        <div class="read-more"><a href="{{post.link}}">xem chi tiáº¿t</a></div>
      </div>
    </div>
  {% endfor %}
  {% include 'pagination.twig' %}
{% endblock %}
