{% block footer %}
  <footer id="footer" class="footer">
    <div class="footer__top">
      <div class="container-wide">
        <div class="footer__top-group">
        {% for key, footer in footer_widget %}
          {{acfwidget('footer_top_fields', 'footer_widget-' ~ key )}}
        {% endfor %}
        </div>
      </div>
    </div>
    <div class="footer__bottom">
      <div class="container-wide">
        {% for key, footer in footer_widget %}
          {{acfwidget('footer_bottom_fields', 'footer_widget-' ~ key )}}
        {% endfor %}
      </div>
    </div>
  </footer>
{% endblock %}
